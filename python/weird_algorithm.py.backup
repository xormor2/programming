def is_even(n): return((n%2)==0)
def is_odd(n):  return((n%2)==1)

n=int(input("Give an integer: "))
print(n)

while (n!=1):
	if is_even(n):
		n=int(n/2)
		print(n)
	elif is_odd(n):
		n=int(n*3+1)
		print(n)
	else:
		print("Error!")

